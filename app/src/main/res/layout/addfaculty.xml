<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EBFCFB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textViewFormName"
        android:layout_width="255dp"
        android:layout_height="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:fontFamily="@font/dance"
        android:padding="12dp"
        android:text="Registration"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFormName"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextFirstName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_above="@+id/editTextLastName"
            android:background="@drawable/edittext_bacl"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:hint="Enter Firstname"
            android:inputType="textPersonName"
            android:textColorHint="#000000"
            android:padding="12dp"
            android:paddingLeft="12dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/editTextLastName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/editTextFirstName"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bacl"
            android:ems="10"
            android:hint="Enter LastName"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_above="@id/editTextPhone"
            android:textColorHint="#000000"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/editTextLastName"
            android:textColorHint="#000000"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:background="@drawable/edittext_bacl"
            android:ems="10"
            android:hint="Enter your Phone no"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_above="@id/editTextaddr"/>

        <EditText
            android:id="@+id/editTextaddr"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bacl"
            android:ems="10"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColorHint="#000000"
            android:hint="Enter your Email address"
            android:inputType="textEmailAddress"
            android:layout_above="@id/editTextUserName"/>

        <EditText
            android:id="@+id/editTextUserName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bacl"
            android:ems="10"
            android:hint="Enter new Username"
            android:textColorHint="#000000"
            android:textSize="14sp"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_above="@id/editTextPassword"/>


        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextUserName"
            android:layout_marginTop="12dp"
            android:background="@drawable/edittext_bacl"
            android:ems="10"
            android:textColorHint="#000000"
            android:hint="Enter new Password"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_above="@id/RegisterButton"/>

        <Button
            android:id="@+id/RegisterButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/custom_button"
            android:textColor="#000000"
            android:text="Submit"
            android:textSize="20sp"
            android:padding="12dp"
            android:layout_above="@id/Cancel_Button"/>

        <Button
            android:id="@+id/Cancel_Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button"
            android:textColor="#000000"
            android:text="Cancel"
            android:textSize="20sp"/>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>